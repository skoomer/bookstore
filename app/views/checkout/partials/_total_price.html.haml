%tr
  %td
    %p.font-16= t('.subtotal')
  %td
    %p.font-16= number_to_currency(current_order.subtotal_price)
- unless step == :address
  %tr
    %td
      %p.font-16= t('.delivery')
    %td
      %p.font-16= number_to_currency(current_order.delivery&.price || 0.00)
%tr
  %td
    %p.font-16= t('.coupon')
  %td
    %p.font-16= number_to_currency(current_order.discount)
%tr
  %td
    %strong.font-18= t('.order_total')
  %td
    %strong.font-18= number_to_currency(current_order.total)
