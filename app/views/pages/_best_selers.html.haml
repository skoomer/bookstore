.col-sm-6.col-md-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      = image_tag book.decorate.book_cover, class: "img-shadow general-thumbnail-img"
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book_path(book), class: "thumb-hover-link" do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          = link_to order_items_path(order_item: { book_id: book.id, quantity: 1 }), method: :post, class: "thumb-hover-link" do
            %i.fa.fa-shopping-cart.thumb-icon
  .mb-35
    .clearfix
      %p.pull-right.font-16.in-gold-500= number_to_currency(book.price)
      %p.title.mr-55= book.title
    %span.divider-sm
    %p.lead.small 
      = book.decorate.author_full_name
