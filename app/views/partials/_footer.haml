%footer.navbar-inverse
    .container
        .row
            .col-sm-9
                %ul.list-inline.general-align.mb-25
                    %li
                        %a.nav-link{href: "#"}= link_to t('.home'), root_path
                    %li
                        %a.nav-link{href: "#"}= link_to t('.shop'), books_path
                    %li
                        %a.nav-link{href: "#"}= t('.orders')
                    %li
                        = link_to t('.settings'), user_session_path, class: 'nav-link'
