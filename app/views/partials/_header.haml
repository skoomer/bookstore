%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t('.title') 
      %a.shop-link.pull-right.visible-xs{href: "#"}
    %a.shop-link.pull-right.hidden-xs{href: "/cart"}
      %span.shop-icon
        %span.shop-quantity= current_order&.order_items&.count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('.home'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('.shop')
            %ul.dropdown-menu
              - categories.each do |category|
                %li
                  = link_to books_path(category_id: category.id) do
                    = category.title
            %li
              - if user_signed_in?
             
                %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}=t('partials.header.my_account')
                %ul.dropdown-menu
                  %li
                    = link_to 'settings', edit_user_registration_path
                  %li
                    = link_to  'menu order'
                  %li
                    = link_to 'log out', destroy_user_session_path, method: :delete
              - else
                %a.dropdown-toggle{ href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
                  = t('.my_account')
                %ul.dropdown-menu
                  %li
                    = link_to t('.log_in'), new_user_session_path, class: 'collapse-link'
                  %li
                    = link_to t('.sign_up'), new_user_registration_path, class: 'collapse-link'


















