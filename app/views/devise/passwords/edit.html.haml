%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('.title')
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'general-form' }, defaults: { wrapper_html: { class: 'form_group mb-30' } }) do |f|
    = f.hidden_field :reset_password_token
    = f.label :password, t('.password_label')
    = f.input :password, label: false, placeholder: t('.password_placeholder')
    = f.label :password_confirmation, t('.confirm_password_label')
    = f.input :password_confirmation, label: false, placeholder: t('.confirm_password_label')
    = f.submit t('.change'), class: 'btn btn-default center-block mb-20'
