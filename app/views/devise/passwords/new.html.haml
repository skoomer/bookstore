%main.container.general-main-wrap
  .text-center
    %h1.mb-30
      = t('auth_user.forgot_password')
    %p.general-password-text
      = t('forgot_password.instructions_message')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, defaults:{ input_html: { class: "form-control" }}) do |f|
    .mb-25
      = f.email_field :email, autofocus: true, placeholder: t('forgot_password.enter_email'), autocomplete: "email", class: "form-control"
    .text-center
      %p#alert-message
        = alert
      = f.submit t('forgot_password.email_instructions'), class: "btn btn-default mb-20"
    .text-center
      %a.in-gold-500.mb-20{href: "/users/sign_in" }=t('forgot_password.cancel')
