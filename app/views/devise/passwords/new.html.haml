%main.container.general-main-wrap
  .text-center
    %h1.mb-30
      = t('.forgot_password')
    %p.general-password-text
      = t('.instructions_message')
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f|
    = f.input :email, autofocus: true
    .text-center
      .action
        = f.button :submit, t('.email_instructions'), id: 'email_button'
      = link_to(t('.cancel'), new_user_session_path, class: 'in-gold-500 mb-20' )
