%main.container
  %h1.general-title-margint=t('settings.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "/user/address"}=t('settings.address')
    %li.tab-item{role: "presentation"}


      %a.tab-link{href: user_path }=t('settings.privacy')

      %a.tab-link{href: edit_user_path }=t('settings.privacy')


  .tab-content
    #privacy.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25=t('settings.email')
          = render partial: 'devise/user/partials/edit_email'
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25=t('settings.password')
          = render partial: 'devise/user/partials/edit_password'
        .col-sm-12
          %p.in-gold-500.font-18.mb-25=t('settings.remove_account')
          = render partial: 'devise/user/partials/remove_account_form'
