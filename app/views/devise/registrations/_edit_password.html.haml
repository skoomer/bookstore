= simple_form_for(@user, url: registration_path(resource_name), remote: true, method: :patch, defaults: { required: false } )do |f|
  = f.label :current_password, t('.current_password')
  = f.input :current_password, label: false, placeholder: t('.password_placeholder')
  = f.label :password, t('.password_label')
  = f.input :password, label: false, placeholder: t('.password_placeholder')
  = f.label :password_confirmation, t('.confirm_password_label')
  = f.input :password_confirmation, label: false, placeholder: t('.confirm_password_label')
  .general-text-align
  = f.submit t('.save'), class: 'btn btn-default mb-10', id: 'password_button'
