%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      'signup'
    = render 'devise/partials/social_buttons'
    %p.general-login-text
      'or'
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class: 'general-form' }) do |f|
    .form-group.mb-30
      = f.input :email, label_html: { class: 'control-label input-label' }, label: '.email_label', placeholder: '.email_placeholder'
    .form-group.mb-30
      = f.input :password, required: false, label_html: { class: 'control-label input-label' }, label: '.password_label', placeholder: '.password_placeholder'
    .form-group.mb-30
      = f.input :password_confirmation, label_html: { class: 'control-label input-label' }, label: '.confirm_password_label', placeholder: '.confirm_password_label'
    .text-center
      = f.submit 'signup', class: 'btn btn-default mb-20', id: 'sign_up', method: :post
