%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('signup.sign_up')
    = render 'devise/partials/social_buttons'
    %p.general-login-text
      = t('signup.or')
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class: 'general-form' }) do |f|
    .form-group.mb-30
      = f.input :email, label_html: { class: 'control-label input-label' }, label: t('signup.email_label'), placeholder: t('signup.email_placeholder')
    .form-group.mb-30
      = f.input :password, required: false, label_html: { class: 'control-label input-label' }, label: t('signup.password_label'), placeholder: t('signup.password_placeholder')
    .form-group.mb-30
      = f.input :password_confirmation, label_html: { class: 'control-label input-label' }, label: t('signup.confirm_password_label'), placeholder: t('signup.confirm_password_label')
    .text-center
      = f.submit t('signup.sign_up'), class: 'btn btn-default mb-20', id: 'sign_up', method: :post
    %p.general-sign-text.text-center
      = t('signup.have_account')
      = link_to 'Log in', new_user_session_path
